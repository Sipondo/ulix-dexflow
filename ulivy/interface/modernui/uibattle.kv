                    #     size_hint: 1, 1
                    #     source: 'ulivy/interface/modernui/battle/battleoptions.png'

                    PixelImage:
                        id: BattleOptionsAttackCell
                        allow_stretch: True
                        pos_hint: {'center_x': 0.37, 'center_y': 0.75}
                        size_hint: 0.5, 0.5

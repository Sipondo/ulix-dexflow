<Game>
    PixelImage:
        # Don't worry about any of this stuff. It just makes sure the game screen is 16:9.
        # Got this from the guys over at Kivy.
        id: BackgroundId
        source: 'gamebounds.png'
        allow_stretch: True
        size: self.parent.size
        offset: [self.center_x - (self.norm_image_size[0]/2), self.center_y - (self.norm_image_size[1]/2)]
        magnification: self.norm_image_size[0] / self.texture_size[0]

        FloatLayout:
            pos: self.parent.offset
            size: self.parent.norm_image_size

            # UI START

  # DIALOGOUE BOX
            RelativeLayout:
                id: DialogueWindow
                pos_hint: {'x': 0.18, 'y': 0.01}
                size_hint: 0.6, 0.2

                PixelImage:
                    id: DialogueBackground
                    allow_stretch: True
                    source: 'dialogue_window.png'
                
                BoxLayout:
                    id: DialogueScreen
                    orientation: 'vertical'

# CHOICE 1
            RelativeLayout:
                id: ChoiceWindow_1
                pos_hint: {'x': 0.49, 'y': 0.22}
                size_hint: 0.3, 0.1

                PixelImage:
                    id: ChoiceBackground_1
                    allow_stretch: True
                    source: 'dialogue_choice.png'
                
                BoxLayout:
                    id: ChoiceScreen_1
                    orientation: 'vertical'

# CHOICE 2
            RelativeLayout:
                id: ChoiceWindow_2
                pos_hint: {'x': 0.49, 'y': 0.33}
                size_hint: 0.3, 0.1

                PixelImage:
                    id: ChoiceBackground_2
                    allow_stretch: True
                    source: 'dialogue_choice.png'
                
                BoxLayout:
                    id: ChoiceScreen_2
                    orientation: 'vertical'

# CHOICE 3
            RelativeLayout:
                id: ChoiceWindow_3
                pos_hint: {'x': 0.17, 'y': 0.22}
                size_hint: 0.3, 0.1

                PixelImage:
                    id: ChoiceBackground_3
                    allow_stretch: True
                    source: 'dialogue_choice.png'
                
                BoxLayout:
                    id: ChoiceScreen_3
                    orientation: 'vertical'

# CHOICE 4
